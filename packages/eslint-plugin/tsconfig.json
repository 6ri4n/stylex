{
  "compilerOptions": {
    "alwaysStrict": true,
    "importHelpers": true,
    "module": "CommonJS",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "target": "ES2019",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"],
    "outDir": "lib"
  },
  "include": ["src/**/*"]
}
